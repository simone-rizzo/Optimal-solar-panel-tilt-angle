<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ReG.PvOptimalSpot">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true"
        />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.ReG.PvOptimalSpot.TabbedActivity"
            android:label="@string/title_activity_tabbed">
        </activity>
        <activity
            android:name="com.ReG.PvOptimalSpot.credits"
            android:label="Credits" />
        <activity
            android:name="com.ReG.PvOptimalSpot.contacts"
            android:label="Contacts" />
        <activity
            android:name="com.ReG.PvOptimalSpot.why_it_works"
            android:label="Documentation" />
        <activity android:name="com.ReG.PvOptimalSpot.chart" />
        <activity android:name="com.ReG.PvOptimalSpot.IntroActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:launchMode="singleTask" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ReG.PvOptimalSpot.MainActivity" />
    </application>

</manifest>